<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Entrada">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnHistorial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:backgroundTint="#469F07"
            android:text="Historial"
            app:layout_constraintEnd_toEndOf="@+id/btnEmergencia"
            app:layout_constraintStart_toStartOf="@+id/btnEmergencia"
            app:layout_constraintTop_toBottomOf="@+id/btnEmergencia" />

        <Button
            android:id="@+id/btnRegistro"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="100dp"
            android:backgroundTint="#DDDA26"
            android:text="Registro"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnEmergencia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:backgroundTint="#CF1B1B"
            android:text="Emergencia"
            app:layout_constraintEnd_toEndOf="@+id/btnRegistro"
            app:layout_constraintStart_toStartOf="@+id/btnRegistro"
            app:layout_constraintTop_toBottomOf="@+id/btnRegistro" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>